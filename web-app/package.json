{
  "name": "henze-trivia-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.api.js --verbose",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:ui",
    "simulate:100": "node ../scripts/simulate_games.js"
  },
  "dependencies": {
    "@sentry/node": "^10.19.0",
    "better-sqlite3": "^12.4.1",
    "critters": "^0.0.23",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "helmet": "^8.1.0",
    "next": "15.5.4",
    "papaparse": "^5.5.3",
    "react": "^19",
    "react-dom": "^19",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "postcss": "^8",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
